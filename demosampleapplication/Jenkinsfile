pipeline {
    agent any

    tools {
        maven "MAVEN_HOME"
        dockerTool "Test_Docker"
    }
    
    environment{
        docker_port="${env.BRANCH_NAME == "master" ? "7100" : "7200"}"
        gke_port="${env.BRANCH_NAME == "master" ? "30157" : "30158"}"
        branch_namee="${env.BRANCH_NAME == "master" ? "m-abhiii" : "d-abhiii"}"
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn -f demosampleapplication/pom.xml clean install'
            }
        }
        stage('Unit Testing') {
            when {branch 'master'}

            steps {
                sh 'mvn -f demosampleapplication/pom.xml test'
           }
            post {
                success {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }
        stage('Sonar') {
            when {branch 'develop'}
            steps {
                withSonarQubeEnv(credentialsId: 'Test_Sonar', installationName: 'Test_Sonar') {
                    sh 'mvn -f demosampleapplication/pom.xml sonar:sonar -Dsonar.host.url=http://localhost:8112 -Dsonar.projectKey=sonar-abhishekkashyap'
                }
            }
        }
        stage('Docker build') {
            steps {
                    sh 'docker build --build-arg port1=${docker_port} --build-arg port2=${gke_port} -t ${branch_namee}:${BUILD_NUMBER} . -f demosampleapplication/Dockerfile'
                    sh 'docker tag ${branch_namee}:${BUILD_NUMBER} kashyapabhishek123/${branch_namee}:${BUILD_NUMBER}'
            }
        }
        stage('Container') {
            steps {
                parallel(
                    'Pre container check':{
                        script{
                            res=sh(returnStdout: true, script: 'docker ps --filter publish=${docker_port} --format {{.ID}}')
                            if(res !=''){
                                sh(returnStdout: false, script: 'docker stop $(docker ps --filter publish=${docker_port} --format {{.ID}})')
                            }
                        }
                    },
                    'Push Image':{
                        withDockerRegistry(credentialsId: 'DockerHub', url: 'https://registry.hub.docker.com') {
                            sh 'docker push kashyapabhishek123/${branch_namee}:${BUILD_NUMBER}'
                        }
                    }
                )
            }
        }
        stage('Docker Deployment') {
            steps {
                sh 'docker container run -dp ${docker_port}:8080 kashyapabhishek123/${branch_namee}:${BUILD_NUMBER}'
            }
        }
    }
}
